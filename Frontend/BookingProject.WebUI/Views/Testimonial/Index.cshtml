@model List<TestimonialViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Reference Image</th>
        <th>Reference Name</th>
        <th>Reference Title</th>
        <th>Delete</th>
        <th>Update</th>
        <th>Details</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.TestimonialId</th>
            <td>@item.Name</td>
            <td>@item.Title</td>
            <td><a href="/Staff/DeleteTestimonial/@item.TestimonialId" class="btn btn-danger">Delete</a></td>
            <td><a href="/Staff/UpdateTestimonial/@item.TestimonialId" class="btn btn-success">Update</a></td>
            <td><a href="#" class="btn btn-dark">Details</a></td>
        </tr>
    }
</table>
<a href="/Testimonial/AddTestimonial/" class="btn btn-info">New testimonial entry</a>


